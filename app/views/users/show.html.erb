<div class="container">
  <div class="row" id="profile">

    <%= image_tag @user.picture_url.to_s, class: 'profile_img'%><br>
    <h1 class="username"><%= @user.name %></h1><br>
    <%= link_to edit_user_registration_path, id: "edit_profile" do %>
      <button type="button" class="btn preview">Edit Profile</button>
    <% end %>
  </div>

  <div class="reading_list">

    <h1>My Reading list</h1>
    <% @reading_list.each do |i| %>
    <li><%= link_to i.title, book_path(i) %>
      <%= link_to book_remove_from_list_path(i,i) do %>
        <i class="fa fa-trash" aria-hidden="true">
          <span class="tooltiptext">Remove from Reading List</span>
        </i><br>
      <% end %>

    <% end %>
  </div>

  <div class="my_work">
    <h1>My Work</h1>
    <div class="grid-shuffle">
      <ul id="grid" class="row">
      <% @user.books.each do |book| %>
      <li class="book-item col-sm-12 col-md-6">
        <div class="bk-img">
          <div class="bk-wrapper">
            <div class="bk-book bk-bookdefault">
              <div class="bk-front">
                <div class="bk-cover" style="background-image: url(<%= book.picture_url.to_s %>); background-size: cover;"></div>
              </div>
              <div class="bk-back"></div>
              <div class="bk-left"></div>
            </div>
          </div>
        </div>
        <div class="item-details">
          <h3 class="book-item_title"><%= book.title %></h3>
          <p class="author">by
            <%= book.author %></p>
          <p class="author"><%= book.category %></p>
          <% if book.status == true %>
          <span class="glyphicon glyphicon-ok" aria-hidden="true">Completed</span>
          <% end %>
          <p><%= book.description %></p>
          <%= link_to book_path(book) do %>
            <button type="button" class="button preview">Read Book</button>
          <% end %>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>

</div>
