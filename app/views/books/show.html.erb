<div class="container">
  <div class="row" id="thin">

    <div class="col-md-8 col-xs-8">
      <div class="col-md-3 col-xs-3">
        <%= image_tag @book.picture_url.to_s, id: "img-content" %>
      </div>
      <div class="col-md-4 col-xs-4">
      </div>
    </div>

    <div class="col-md-2 col-xs-2">
      <%= link_to book_add_to_list_path(@book) do %>
      <i class="fa fa-plus-square fa-2x" aria-hidden="true">
        <span class="tooltiptext">Add to Reading List</span>
      </i>
      <% end %>
    </div>

    <div class="col-md-2 col-xs-2">
      <%= link_to like_book_path(@book), method: :put do %>
      <div class="like grow">
        <i class="fa fa-thumbs-up fa-2x like" aria-hidden="true"></i>
      </div>
      <%#= @book.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_book_path(@book), method: :put do %>
      <div class="dislike grow">
        <i class="fa fa-thumbs-down fa-2x like" aria-hidden="true"></i>
      </div>
      <%#= @book.get_downvotes.size %>
      <% end %>
    </div>

  </div>
  <div class="row" id="book_info">
    <div class="icons">
      <h1><%= @book.title %></h1><br>
      <i class="fa fa-eye icon" aria-hidden="true"> <%= @book.impressionist_count(:filter=>:session_hash) %></i>
      <i class="fa fa-star icon" aria-hidden="true"> <%= @book.score %></i><br><br>
      <%= image_tag @user.picture_url.to_s, class: 'profile_img'%><br>
      <h5>by <%= link_to @book.author, author_path(@book.user_id) %></h5>
    </div>
  </div>

  <hr>

  <div class="row">
    <%= will_paginate @chapters, previous_label: h("<"), next_label: h(">") %>
    <% for chapter in @chapters %>
    <div class="chapter">
      <h3><%= chapter.title %></h3>
    </div>
    <div class="content">
      <p><%= chapter.content %>
    </div>
    <% end %>
      <p>
        <% if current_user.id == @book.user_id %>
        <%= link_to 'Continue Writing', new_book_chapter_path(@book) %>
        |
        <%= link_to 'Destroy', @book, method: :delete, data: { confirm: 'Are you sure?' } %></p>
      <% end %>
      <%= link_to "Download Book", @book.attachment_url %>
      <p>
        <% @tweet = @book.title + ": " + @book.description %>
        <%= social_share_button_tag(@tweet, :allow_sites => %w(twitter facebook)) %>
      </p>
    </div>
    <br>
    <div class="row">
      <div class="margin-bottom">
        <%= link_to 'Add a review', new_book_comment_path(@book), id: 'new_link', remote: true %>
      </div>
      <h3 class="white-text">Reviews:</h3>
      <div class="main">
        <% if @book.comments.nil? %>
        <p>No reviews yet!</p>
      <% else %>
        <%= render @book.comments %>
        <% end %>
      </div>
    </div>
