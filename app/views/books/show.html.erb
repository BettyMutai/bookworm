<div class="container">
  <div class="row" id="thin">
    <div class="col-md-8 col-xs-7">
      <div class="col-md-2">
        <%= image_tag @book.picture_url.to_s, id: "img-content" %>
      </div>
      <div class="col-md-2">
        <h5><%= @book.title %></h5>
        <p>by
          <%= @book.author %></p>
      </div>
    </div>
    <div class="col-md-2 col-xs-1">
      <%= link_to book_add_to_list_path(@book) do %>
      <i class="fa fa-plus-square fa-2x" aria-hidden="true"></i>
      <% end %>
    </div>
    <div class="col-md-2 col-xs-2">
      <%= link_to like_book_path(@book), method: :put do %>
      <div class="like grow">
        <i class="fa fa-thumbs-up fa-2x like" aria-hidden="true"></i>
      </div>
      <%#= @book.get_upvotes.size %>
      <% end %>

      <%= link_to dislike_book_path(@book), method: :put do %>
      <div class="dislike grow">
        <i class="fa fa-thumbs-down fa-2x like" aria-hidden="true"></i>
      </div>
      <%#= @book.get_downvotes.size %>
      <% end %>
    </div>
  </div>
  <i class="fa fa-eye" aria-hidden="true"><%= @book.impressionist_count(:filter=>:session_hash) %>
  </i>

  <h1><%= @book.title %></h1>
  <% if current_user %>

  <%= link_to dislike_book_path(@book), method: :put do %>
  <button class="btn btn-success" name="button">Downvote</button>
  <%= @book.get_downvotes.size %>

  <div class="dislike grow">
    <i class="fa fa-thumbs-down fa-3x like" aria-hidden="true"></i>
  </div>
  <%= @book.get_downvotes.size %>
  <% end %>
  <%= @book.score %>
<% else %>
  <p><%= link_to "Log In", new_user_session_path %>/<%= link_to "Sign Up", new_user_registration_path %>
    to upvote or downvote.</p>
  <% end %>

  <p>
    <%= markdown(@book.content) %>
  </p>

  <p>
    <% @tweet = @book.title + ": " + @book.description %>
    <%= social_share_button_tag(@tweet, :allow_sites => %w(twitter facebook)) %>
  </p>
  <p>
    <% @chapters.each do |chapter| %>
      <%= chapter.content %>
    <% end %>
  </p>
  <% if current_user.id == @book.user_id %>
  <%= link_to 'Continue Writing', new_book_chapter_path(@book) %>
  |
  <%= link_to 'Destroy', @book, method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>
<%= link_to 'Back', books_path %><br>

<td><%= link_to "Download Book", @book.attachment_url %></td>
<h3 class="white-text">Reviews:</h3>
<div class="main">
  <% if @book.comments.nil? %>
  <p>No reviews yet!</p>
<% else %>
  <%= render @book.comments %>
  <% end %>
</div>

<br>
<div class="margin-bottom">
  <%= link_to 'Add a review', new_book_comment_path(@book), id: 'new_link', remote: true %>
</div>
