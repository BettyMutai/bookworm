<!-- Main Section -->
<div class="container page-container">
  <section id="book_list">
    <div class="toolbar row">
      <div class="filter-options col-sm-12 col-md-9">
        <% categories = Book.all.collect(&:category) %>
        <% categories.each do |category| %>
        <%= link_to category, books_path(category), class: "filter-item" %>
        <% end %>
      </div>
    </div>
    <div class="grid-shuffle">
      <ul id="grid" class="row">
        <% @books.each do |book| %>
        <li class="book-item col-sm-12 col-md-6">
          <div class="bk-img">
            <div class="bk-wrapper">
              <div class="bk-book bk-bookdefault">
                <div class="bk-front">
                  <div class="bk-cover" style="background-image: url(<%= book.picture_url.to_s %>);-webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;-webkit-filter: contrast(90%);align-items: center;"></div>
                </div>
                <div class="bk-back"></div>
                <div class="bk-left"></div>
              </div>
            </div>
          </div>
          <div class="item-details">
            <h3 class="book-item_title"><%= book.title %></h3>
            <p class="author">by
              <%= book.author %></p>
            <p class="author"><%= book.category %></p>
            <% if book.status == true %>
            <span class="glyphicon glyphicon-ok" aria-hidden="true">Completed</span>
            <% end %>
            <p><%= book.description %></p>
            <%= link_to book_path(book) do %>
              <button type="button" class="button preview">Read Book</button>
            <% end %>
          </div>
        </li>
        <% end %>
      </ul>
    </div>
  </section>

</div>
