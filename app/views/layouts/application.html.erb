<!DOCTYPE html>
<html>
  <head>
    <title>Bookworm</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!-- Dropdown Structure -->
<ul id="dropdown1" class="dropdown-content">
  <% @books.each do |book| %>
  <li><a href="#"><%= book.category %></a></li>
<% end %>
</ul>
<nav>
  <div class="nav-wrapper container">
    <a href="/" class="brand-logo">logo</a>
    <a href="/" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
    <ul class="right hide-on-med-and-down">
      <!-- Dropdown Trigger -->
      <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Discover<i class="material-icons right">arrow_drop_down</i></a></li>
      <li><%= link_to 'Create', new_book_path %></li>
      <li><a href="badges.html">Profile</a></li>
    </ul>
    <ul class="side-nav" id="mobile-demo">
      <!-- Dropdown Trigger -->
      <li><a class="dropdown-button" href="#!" data-activates="dropdown1">Discover<i class="material-icons right">arrow_drop_down</i></a></li>
      <li><%= link_to 'Create', new_book_path %></li>
      <li><a href="badges.html">Profile</a></li>
    </ul>
  </div>
</nav>
    <%= yield %>
    <% unless flash.empty? %>
    <script type="text/javascript">
    <% flash.each do |f| %>
    <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
    toastr['<%= type %>']('<%= f[1] %>');
    <% end %>
    </script>
    <% end %>
  </body>
</html>
