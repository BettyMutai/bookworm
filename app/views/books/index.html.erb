<p id="notice"><%= notice %></p>

<h1>Books</h1>

<% @books.each do |book| %>
<div class="col-xs-12 col-md-4">
  <article class="card animated fadeInLeft">
    <%= image_tag book.picture_url.to_s, class: "card-img-top img-responsive", id: "image-main" %>
    <div class="card-block">
      <h4 class="card-title"><%= book.title %></h4>
      <h6 class="text-muted">by
        <%= book.author %></h6>
      <p class="card-text">
        <%= book.description %><br>
        <%= book.language %><br>
        <%= book.category %><br>
      </p>
    </div>
  </article>
</div>
<% end %>
